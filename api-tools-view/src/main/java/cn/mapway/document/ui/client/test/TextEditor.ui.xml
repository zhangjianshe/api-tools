<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .box {
            padding: 5px;
            height: 28px;
            line-height: 28px;
            font-size: 18px;
        }

        .box1 {
            padding: 5px;
        }

        .bk {
            background-color: #f0f0f0;
            padding: 10px;
        }
    </ui:style>
    <g:DockLayoutPanel width="350px" height="150px" styleName="{style.bk}">
        <g:north size="45">
            <g:Label styleName="{style.box1}" ui:field="lbTEXT">编辑</g:Label>
        </g:north>
        <g:center>
            <g:HTMLPanel styleName="{style.box}">
                <g:TextBox styleName="{style.box}" ui:field="txtContent" width="310px"></g:TextBox>
            </g:HTMLPanel>
        </g:center>
        <g:south size="45">
            <g:HorizontalPanel width="100%" horizontalAlignment="center">
                <g:Button ui:field="btnSubmit">确定</g:Button>
            </g:HorizontalPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>